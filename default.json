{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Common Renovate configuration for JavaScript/TypeScript GitHub Actions",
  "extends": [
    "config:best-practices",
    "config:js-app",
    "npm:unpublishSafe",
    ":rebaseStalePrs",
    ":maintainLockFilesWeekly"
  ],
  "packageRules": [
    {
      "extends": ["helpers:pinGitHubActionDigests"],
      "versioning": "npm"
    },
    {
      "matchDatasources": ["node-version"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@types/node", "@octokit/*"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackageNames": ["amezin/js-actions-common"],
      "matchDatasources": ["github-tags"],
      "versioning": "npm",
      "groupName": "js-actions-common",
      "minimumReleaseAge": "0",
      "automerge": true
    },
    {
      "matchPackageNames": [
        "@amezin/eslint-config-js-actions",
        "@amezin/js-actions-octokit"
      ],
      "matchDatasources": ["npm"],
      "groupName": "js-actions-common",
      "minimumReleaseAge": "0",
      "automerge": true
    },
    {
      "matchPackageNames": ["amezin/*"],
      "matchManagers": ["github-actions"],
      "minimumReleaseAge": "0",
      "automerge": true
    }
  ],
  "postUpdateOptions": ["npmDedupe", "npmInstallTwice"],
  "platformAutomerge": false
}
